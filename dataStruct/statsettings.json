// 比赛数据统计控件设置数据结构定义
// 以下内容将保存在数据库中，从网络端下载的内容也是这样的形式
// 根据这些配置来初始化
// 初装应用时就会有一个key为defaultsettings的值
// 设置成功了就会有一个key为lastsettings的值
// 如果从远端下载了就会有一个key为xxx-settings的值（xxx为比赛代码）
{
	"gameInfos":{
		"code":"",
		"name":"",
		"discription":""
	},
	"statOptions":{// 统计选项
		"isNeedOffensiveTimeLimit" : false,
		"isNeedOvertime" : false,
		"isNeedRate" : false,
		"isShotOnly" : false,
		"isCountFoul" : true,
		"isFreeThrow" : false,
		"isNeedPersonal" : false
	},
	"gameRules" : {// 比赛规则
		"type" : "fiba",// "cba","nba","halfcourt","self"
		"gameCount" : "time",//"score",以什么方式记录作为结束
		"totalSections" : 4,
		"gameCountPerSection" : 10,
		"gameCountOvertime" : 5,
		"firstOffensiveTimeLimit" : 24,
		"secondOffensiveTimeLimit" : 14,
		"playersOnCourt" : 5,
		"foulOutCount" : 6,
		"foulsPersection" : 4,
		"timeOutCount" : 10
	},
	"teamInfos" : {// 球队细节
		"teamNameHome" : "主队",
		"teamCodeHome" : "NULL",
		"playerCountsHome" : "8",
		"teamNameGuest" : "客队",
		"teamCodeGuest" : "NULL",
		"playerCountsGuest" : "8"
	},
	"playersInfos":{// 球员信息
		"home" : [{"code":"x","no":1,"name":"owngame"},{"code":"x","no":2,"name":"owngame2"},{"code":"x","no":3,"name":"owngame3"}],
		"guest" : []
	}
}
